    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: linear-gradient(to bottom right, #A683E3  ,#E4E9FD );
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #FFFF00;
        }

        .home-button {
            text-align: left;
            margin-bottom: 20px;
        }

        .home-button a {
            display: inline-block;
            padding: 10px 20px;
            background-color:#E4E9FD;
            color: black;
            text-decoration: none;
            border-radius: 4px;
        }

        form {
            max-width: 500px;
            margin: 0 auto;
            background-color: #E4E9FD;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        input[type="text"],
        input[type="number"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 5px;
        }

        button[type="submit"] {
            display: block;

            width: 45%;
            margin-top: 10px;
            padding: 10px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
            text-align: center;
        }

        button[type="submit"]:hover {
            background-color: black;
        }
    </style>
</head>
